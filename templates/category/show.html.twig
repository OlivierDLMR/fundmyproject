{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ category.name }}</h1>
        <a href="{{ path('category_show', {'id': category.id}) }}">{{ category.name }}</a>

        <p>Catégories : </p>
        <ul>
            {% for category in category.name %}
                <li>{{ category.name }}</li>
            {% else %}
                <li>Aucune catégorie</li>
            {% endfor %}
        </ul>


    </div>
{% endblock %}
